{
  "name": "soul-brews-cat-lab-webhook-relay",
  "version": "0.5.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler d1 migrations apply soul-brews-cat-lab --local && vite",
    "build": "vite build",
    "deploy": "vite build && wrangler deploy",
    "typecheck": "tsc --noEmit",
    "mcp": "npx tsx src/mcp.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio --config drizzle-local.config.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.0",
    "@tailwindcss/vite": "^4.2.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^4.2.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.25.2",
    "@cloudflare/workers-types": "^4.20260302.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.3.1",
    "drizzle-kit": "^0.31.9",
    "typescript": "^5.7",
    "vite": "^7.3.1",
    "wrangler": "^4"
  }
}
